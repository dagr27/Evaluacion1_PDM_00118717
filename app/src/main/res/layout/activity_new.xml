<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalle De Producto"
        android:textSize="30dp"
        android:textAlignment="center"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        tools:context=".GridLayoutActivity"
        android:useDefaultMargins="true">

        <LinearLayout
            android:id="@+id/btn1"
            android:orientation="vertical"
            android:layout_height="90dp"
            android:layout_width="128dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:background="@color/p1">
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="45dp"
                android:text="Producto 1"
                android:textSize="20dp"
                android:textColor="@color/text"/>
            <TextView
                android:id="@+id/t1"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="45dp"
                android:text="#"
                android:textSize="30dp"
                android:textColor="@color/text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn2"
            android:orientation="vertical"
            android:layout_height="90dp"
            android:layout_width="128dp"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:background="@color/p2">
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="45dp"
                android:text="Producto 2"
                android:textSize="20dp"
                android:textColor="@color/text"/>
            <TextView
                android:id="@+id/t2"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="45dp"
                android:text="#"
                android:textSize="30dp"
                android:textColor="@color/text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn3"
            android:orientation="vertical"
            android:layout_height="90dp"
            android:layout_width="128dp"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:background="@color/p3">
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="45dp"
                android:text="Producto 3"
                android:textSize="20dp"
                android:textColor="@color/text"/>
            <TextView
                android:id="@+id/t3"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="45dp"
                android:text="#"
                android:textSize="30dp"
                android:textColor="@color/text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn4"
            android:orientation="vertical"
            android:layout_height="90dp"
            android:layout_width="128dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:background="@color/p4">
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="45dp"
                android:text="Producto 4"
                android:textSize="20dp"
                android:textColor="@color/text"/>
            <TextView
                android:id="@+id/t4"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="45dp"
                android:text="#"
                android:textSize="30dp"
                android:textColor="@color/text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn5"
            android:orientation="vertical"
            android:layout_height="90dp"
            android:layout_width="128dp"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:background="@color/p5">
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="45dp"
                android:text="Producto 5"
                android:textSize="20dp"
                android:textColor="@color/text"/>
            <TextView
                android:id="@+id/t5"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="45dp"
                android:text="#"
                android:textSize="30dp"
                android:textColor="@color/text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn6"
            android:orientation="vertical"
            android:layout_height="90dp"
            android:layout_width="128dp"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:background="@color/p6">
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="45dp"
                android:text="Producto 6"
                android:textSize="20dp"
                android:textColor="@color/text"/>
            <TextView
                android:id="@+id/t6"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="45dp"
                android:text="#"
                android:textSize="30dp"
                android:textColor="@color/text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn7"
            android:orientation="vertical"
            android:layout_height="90dp"
            android:layout_width="128dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:background="@color/p7">
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="45dp"
                android:text="Producto 7"
                android:textSize="20dp"
                android:textColor="@color/text"/>
            <TextView
                android:id="@+id/t7"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="45dp"
                android:text="#"
                android:textSize="30dp"
                android:textColor="@color/text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn8"
            android:orientation="vertical"
            android:layout_height="90dp"
            android:layout_width="128dp"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:background="@color/p8">
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="45dp"
                android:text="Producto 8"
                android:textSize="20dp"
                android:textColor="@color/text"/>
            <TextView
                android:id="@+id/t8"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="45dp"
                android:text="#"
                android:textSize="30dp"
                android:textColor="@color/text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn9"
            android:orientation="vertical"
            android:layout_height="90dp"
            android:layout_width="128dp"
            android:layout_column="2"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:background="@color/p8">
            <TextView
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="45dp"
                android:text="Producto 9"
                android:textSize="20dp"
                android:textColor="@color/text"/>
            <TextView
                android:id="@+id/t9"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="45dp"
                android:text="#"
                android:textSize="30dp"
                android:textColor="@color/text"/>
        </LinearLayout>

    </GridLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Usuario:"/>
        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Correo Electronico:"/>
        <TextView
            android:id="@+id/email1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Total de productos:"/>
        <TextView
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share"/>
    </LinearLayout>
</LinearLayout>